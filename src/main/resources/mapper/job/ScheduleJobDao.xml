<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.modules.job.dao.ScheduleJobDao">
	<select id="queryObject" resultType="com.richstonedt.garnet.modules.job.entity.ScheduleJobEntity">
		select * from gar_schedule_job where job_id = #{value}
	</select>

	<select id="queryList" resultType="com.richstonedt.garnet.modules.job.entity.ScheduleJobEntity">
		select * from gar_schedule_job
		<where>
			<if test="beanName != null and beanName.trim() != ''">
				bean_name like concat('%', #{beanName}, '%') 
			</if>
		</where>
		order by job_id
		<if test="offset != null and limit != null ">
		limit #{limit} offset #{offset};
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(1) from gar_schedule_job 
		<where>
			<if test="beanName != null and beanName.trim() != ''">
				bean_name like concat('%', #{beanName}, '%') 
			</if>
		</where>
	</select>

	<insert id="save" parameterType="com.richstonedt.garnet.modules.job.entity.ScheduleJobEntity"
			useGeneratedKeys="true" keyProperty="jobId">
		insert into gar_schedule_job
		(
			bean_name,
			method_name,
			params,
			cron_expression,
			status,
			remark,
			create_time
		)
		values
		(
			#{beanName},
			#{methodName},
			#{params},
			#{cronExpression},
			#{status},
			#{remark},
			#{createTime}
		)
	</insert>

	<update id="update" parameterType="com.richstonedt.garnet.modules.job.entity.ScheduleJobEntity">
		update gar_schedule_job 
		<set> 
			<if test="beanName != null and beanName != ''">
				bean_name = #{beanName},
			</if>
			<if test="methodName != null and methodName != ''">
				method_name = #{methodName},
			</if>
			<if test="params != null  and params != ''">
				params = #{params},
			</if>
			<if test="cronExpression != null  and cronExpression != ''">
				cron_expression = #{cronExpression},
			</if>
			<if test="status != null">
				status = #{status},
			</if>
			<if test="remark != null  and remark != ''">
				remark = #{remark}
			</if>
		</set>
		where job_id = #{jobId}
	</update>
	
	<!-- 批量更新状态 -->
	<update id="updateBatch"> 
		update gar_schedule_job set status = #{status} where job_id in 
		<foreach item="jobId" collection="list"  open="(" separator="," close=")">
			#{jobId}
		</foreach>
	</update>
	
	<delete id="deleteBatch">
		delete from gar_schedule_job where job_id in 
		<foreach item="jobId" collection="array" open="(" separator="," close=")">
			#{jobId}
		</foreach>
	</delete>
</mapper>