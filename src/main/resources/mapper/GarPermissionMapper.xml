<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.dao.GarPermissionDao">

    <insert id="save" parameterType="com.richstonedt.garnet.model.GarPermission">
        INSERT INTO gar_permission
        (
        name,
        permission,
        description,
        url,
        api,
        method,
        status
        )
        VALUES
            (
                #{name},
                #{permission},
                #{description},
                #{url},
                #{api},
                #{method},
                #{status}
            );
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gar_permission
        <where>
            permission_id = #{id};
        </where>
    </delete>

    <delete id="deleteBatch" parameterType="java.util.List">
        delete from gar_permission WHERE permission_id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="queryObject" resultType="com.richstonedt.garnet.model.GarPermission">
        select * from gar_permission
        <where>
            permission_id = #{id};
        </where>
    </select>

    <select id="queryObjects" resultType="com.richstonedt.garnet.model.GarPermission">
        select * from gar_permission
        <where>
            <if test="searchName != null and searchName != ''">
                and `name` LIKE CONCAT('%',#{searchName},'%')
            </if>
        </where>
        ORDER BY permission_id asc
        <if test="offset != null and limit != null">
            limit #{limit} offset #{offset};
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*) FROM gar_permission;
    </select>

    <update id="update" parameterType="com.richstonedt.garnet.model.GarPermission">
        UPDATE gar_permission
        <set>
            <if test="name != null and  name!=''">
                name = #{name},
            </if>
            <if test="permission != null and permission != ''">
                permission = #{permission},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="api != null and api != ''">
                api = #{api},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
            <if test="status != null">
                status = #{status}
            </if>
        </set>
        <where>
            permission_id = #{permissionId};
        </where>
    </update>

    <select id="getPermissionsByIds" resultType="string" parameterType="java.util.Set">
        SELECT p.permission
        from gar_permission AS p WHERE permission_id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="getPermissionByPermission" resultType="com.richstonedt.garnet.model.GarPermission">
        SELECT *
        FROM gar_permission
        WHERE permission=#{permission}
    </select>

</mapper>