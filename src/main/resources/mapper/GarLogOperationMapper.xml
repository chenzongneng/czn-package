<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.dao.GarLogOperationDao">

    <select id="getAllOperations" resultType="com.richstonedt.garnet.model.GarLogOperation">
        SELECT *
        FROM gar_log_operation;
    </select>

    <insert id="save" parameterType="com.richstonedt.garnet.model.GarLogOperation">
        INSERT INTO gar_log_operation VALUES
            (
                #{id},
                #{url},
                #{method},
                #{operation}
            );
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gar_log_operation
        <where>
            id = #{id};
        </where>
    </delete>

    <delete id="deleteBatch" parameterType="java.util.List">
        DELETE FROM gar_log_operation
        <where>
            id in
            <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </delete>

    <select id="queryObject" resultType="com.richstonedt.garnet.model.GarLogOperation">
        SELECT * FROM gar_log_operation
        <where>
            id = #{id};
        </where>
    </select>

    <update id="update" parameterType="com.richstonedt.garnet.model.GarLogOperation">
        UPDATE gar_log_operation
        <set>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
            <if test="operation != null and operation != ''">
                operation = #{operation}
            </if>
        </set>
    </update>

</mapper>