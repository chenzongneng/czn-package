<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.dao.GarRoleDao">

    <insert id="save" parameterType="com.richstonedt.garnet.model.GarRole">
        INSERT INTO gar_role
        (
            role_id,
            tenant_id,
            app_id,
            name,
            remark
        )
        VALUES
            (
                #{roleId},
                #{tenantId},
                #{appId},
                #{name},
                #{remark}
            );
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gar_role
        <where>
            role_id = #{id};
        </where>
    </delete>

    <delete id="deleteBatch" parameterType="java.util.List">
        delete from gar_role WHERE role_id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="queryObject" resultType="com.richstonedt.garnet.model.GarRole">
        select * from gar_role
        <where>
            role_id = #{id};
        </where>
    </select>

    <select id="queryObjects" resultType="com.richstonedt.garnet.model.GarRole">
        select * from gar_role
        <where>
            <if test="searchName != null and searchName != ''">
                and name LIKE CONCAT('%',#{searchName},'%')
            </if>
        </where>
        ORDER BY app_id asc
        <if test="offset != null and limit != null">
            limit #{limit} offset #{offset};
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*)
        FROM gar_role;
    </select>

    <update id="update" parameterType="com.richstonedt.garnet.model.GarRole">
        UPDATE gar_role
        <set>
            <if test="tenantId != null ">
                tenant_id = #{tenantId},
            </if>
            <if test="appId != null">
                app_id = #{appId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark}
            </if>
        </set>
        <where>
            role_id = #{roleId};
        </where>
    </update>
</mapper>