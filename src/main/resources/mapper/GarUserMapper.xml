<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.dao.GarUserDao">

    <insert id="save" parameterType="com.richstonedt.garnet.model.GarUser">
        INSERT INTO gar_user
        (
        user_id,
            tenant_id,
            app_id,
            username,
            password,
            email,
            mobile,
        status
        )
        VALUES
            (
        #{userId},
                #{tenantId},
                #{appId},
                #{userName},
                #{password},
                #{email},
                #{mobile},
        #{status}
            );
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gar_user
        <where>
            user_id = #{id};
        </where>
    </delete>

    <delete id="deleteBatch" parameterType="java.util.List">
        delete from gar_user WHERE user_id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="queryObject" resultType="com.richstonedt.garnet.model.GarUser">
        select * from gar_user
        <where>
            user_id = #{id};
        </where>
    </select>

    <select id="getUserByName" resultType="com.richstonedt.garnet.model.GarUser">
        select * from gar_user
        <where>
            username = #{userName};
        </where>
    </select>

    <select id="queryObjects" resultType="com.richstonedt.garnet.model.GarUser">
        select * from gar_user
        <where>
            <if test="searchName != null and searchName != ''">
                and username LIKE CONCAT('%',#{searchName},'%')
            </if>
        </where>
        ORDER BY user_id asc
        <if test="offset != null and limit != null">
            limit #{limit} offset #{offset};
        </if>
    </select>

    <select id="queryUserList" resultType="com.richstonedt.garnet.model.GarUser">
        select * from gar_user
        <where>
            <if test="tenantId != null">
                tenant_id = #{tenantId}
            </if>
            <if test="searchName != null and searchName != ''">
                and username LIKE CONCAT('%',#{searchName},'%')
            </if>
        </where>
        ORDER BY user_id asc
        <if test="offset != null and limit != null">
            limit #{limit} offset #{offset};
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*) FROM gar_user;
    </select>

    <update id="update" parameterType="com.richstonedt.garnet.model.GarUser">
        UPDATE gar_user
        <set>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="appId != null">
                app_id = #{appId},
            </if>
            <if test="userName != null and userName != ''">
                username = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="status != null">
                status = #{status}
            </if>
        </set>
        <where>
            user_id = #{userId};
        </where>
    </update>
</mapper>