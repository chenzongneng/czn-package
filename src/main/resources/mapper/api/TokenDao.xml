<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.modules.api.dao.TokenDao">

	<select id="queryByUserId" resultType="com.richstonedt.garnet.modules.api.entity.TokenEntity">
		select * from gar_tb_token where user_id = #{value}
	</select>

	<select id="queryByToken" resultType="com.richstonedt.garnet.modules.api.entity.TokenEntity">
		select * from gar_tb_token where token = #{value}
	</select>
	 
	<insert id="save">
		insert into gar_tb_token
		<set>
			<if test="userId != null and userId != ''">
				user_id = #{userId},
			</if>
			<if test="token != null and token != ''">
				token = #{token},
			</if>
			<if test="expireTime != null and expireTime != ''">
				expire_time = #{expireTime},
			</if>
			<if test="updateTime != null and updateTime != ''">
				update_time = #{updateTime}
			</if>
		</set>
	</insert>
	 
	<update id="update">
		update gar_tb_token 
		<set>
			<if test="token != null and token != ''">
				token = #{token},
			</if>
			<if test="expireTime != null and expireTime != ''">
				expire_time = #{expireTime},
			</if>
			<if test="updateTime != null and updateTime != ''">
				update_time = #{updateTime}
			</if>
		</set>
		where user_id = #{userId}
	</update>

</mapper>