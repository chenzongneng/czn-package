<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.dao.GarAuthorityMenuDao">

    <insert id="save">
        INSERT INTO gar_authority_menu
        (
          authority_id,
          menu_id
        )
        VALUES
        (
          #{authorityId},
          #{menuId}
        );
    </insert>

    <delete id="deleteByAuthorityId">
    DELETE
    FROM gar_authority_menu
    WHERE authority_id = #{authorityId}
    </delete>

    <select id="getMenuIdByAuthorityId" resultType="java.lang.Long">
        SELECT menu_id
        FROM gar_authority_menu
        WHERE authority_id = #{authorityId}
    </select>

</mapper>