<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.dao.GarRoleAuthorityDao">

    <insert id="save" parameterType="com.richstonedt.garnet.model.GarRoleAuthority">
        INSERT INTO gar_role_authority
        (
            role_id,
            authority_id
        )
        VALUES
            (
                #{roleId},
                #{authorityId}
            );
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM gar_role_authority
        <where>
            role_id = #{id};
        </where>
    </delete>

    <delete id="deleteBatch" parameterType="java.util.List">
        delete from gar_role_authority WHERE role_id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <update id="update" parameterType="com.richstonedt.garnet.model.GarRoleAuthority">
        UPDATE gar_role_authority
        <set>
            <if test="authorityId != null ">
                authority_id = #{authorityId}
            </if>
        </set>
        <where>
            role_id = #{roleId};
        </where>
    </update>

    <select id="getRoleAuthorityByRoleId" resultType="com.richstonedt.garnet.model.GarRoleAuthority">
        SELECT * FROM gar_role_authority
        <where>
            role_id = #{roleId};
        </where>
    </select>

    <select id="getRoleAuthorityByAuthorityId" resultType="com.richstonedt.garnet.model.GarRoleAuthority">
        SELECT * FROM gar_role_authority
        <where>
            authority_id = #{deptId};
        </where>
    </select>

    <delete id="deleteRoleAuthorityByAuthorityId" parameterType="java.lang.Long">
        DELETE FROM gar_role_authority
        <where>
            authority_id= #{authorityId}
        </where>
    </delete>

    <select id="getAuthorityIdsByRoleIds" resultType="_long" parameterType="java.util.Set">
        SELECT ra.authority_id
        from gar_role_authority AS ra WHERE role_id in
        <foreach collection="roleIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>