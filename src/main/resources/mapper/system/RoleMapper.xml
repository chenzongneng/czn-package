<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.system.role.dao.RoleDao">

    <select id="getRoleLists" resultType="com.richstonedt.garnet.system.role.entity.SysRole">
        select * from gar_sys_role
        <where>
            <if test="param3 != 0">
                (role_id = #{param3} or parent_role_id = #{param3})
            </if>
            <if test="param4 != null and param4 != ''">
                and role_name LIKE CONCAT('%',#{param4},'%')
            </if>
        </where>
        ORDER BY role_id asc
        <if test="param1 != null and param2 != null">
            limit #{param2} offset #{param1};
        </if>
    </select>

    <select id="getRoleById" resultType="com.richstonedt.garnet.system.role.entity.SysRole">
        select * from gar_sys_role
        <where>
            role_id = #{param1};
        </where>
    </select>

    <insert id="insertRole" parameterType="com.richstonedt.garnet.system.role.entity.SysRole" useGeneratedKeys="true"
            keyProperty="roleId">
        insert into gar_sys_role
        (
        parent_role_id,
        role_name,
        remark,
        dept_id
        )
        values
        (
        #{parentRoleId},
        #{roleName},
        #{remark},
        #{deptId}
        );
    </insert>

    <update id="updateRole" parameterType="com.richstonedt.garnet.system.role.entity.SysRole" useGeneratedKeys="true"
            keyProperty="roleId">
        UPDATE gar_sys_role
        <set>
            <if test="parentRoleId != null">
                parent_role_id = #{parentRoleId},
            </if>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="deptId != null">
                dept_id = #{deptId}
            </if>
        </set>
        <where>
            role_id = #{roleId};
        </where>
    </update>

    <delete id="deleteRole" >
        delete from gar_sys_role
        <where>
            role_id = #{roleId};
        </where>
    </delete>

</mapper>