<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.modules.sys.dao.SysUserTokenDao">

	<select id="queryByUserId" resultType="com.richstonedt.garnet.modules.sys.entity.SysUserTokenEntity">
		select * from gar_sys_user_token where user_id = #{value}
	</select>

	<select id="queryByToken" resultType="com.richstonedt.garnet.modules.sys.entity.SysUserTokenEntity">
		select * from gar_sys_user_token where token = #{value}
	</select>

	<insert id="save" parameterType="com.richstonedt.garnet.modules.sys.entity.SysUserTokenEntity">
		insert into gar_sys_user_token
		<set>
			<if test="userId != null">
				user_id = #{userId},
			</if>
			<if test="token != null and token != ''">
				token = #{token},
			</if>
			<if test="expireTime != null">
				expire_time = #{expireTime},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime}
			</if>
		</set>
	</insert>

	<update id="update" parameterType="com.richstonedt.garnet.modules.sys.entity.SysUserTokenEntity">
		update gar_sys_user_token
		<set>
			<if test="token != null and token != ''">
				token = #{token},
			</if>
			<if test="expireTime != null">
				expire_time = #{expireTime},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime}
			</if>
		</set>
		where user_id = #{userId}
	</update>

</mapper>