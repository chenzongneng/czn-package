<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.richstonedt.garnet.modules.sys.dao.SysConfigDao">
    <select id="queryObject" resultType="com.richstonedt.garnet.modules.sys.entity.SysConfigEntity">
		select * from gar_sys_config where id = #{id}
	</select>

    <select id="queryList" parameterType="map" resultType="com.richstonedt.garnet.modules.sys.entity.SysConfigEntity">
		select * from gar_sys_config where status = 1 
		<if test="key != null and key.trim() != ''">
			and key like concat('%',#{key},'%') 
		</if>
		<if test="offset != null and limit != null">
			limit  #{limit} offset #{offset}
		</if>
	</select>
	
	<select id="queryTotal" parameterType="map" resultType="int">
		select count(*) from gar_sys_config where status = 1 
		<if test="key != null and key.trim() != ''">
			and key like concat('%',#{key},'%')
		</if>
	</select>

    <insert id="save" parameterType="com.richstonedt.garnet.modules.sys.entity.SysConfigEntity">
			insert into gar_sys_config
			<set>
				<if test="key != null and key != ''">
					key = #{key},
				</if>
				<if test="value != null and value != ''">
					value = #{value},
				</if>
				<if test="remark != null and remark != ''">
					remark = #{remark}
				</if>
			</set>
	</insert>

    <update id="update" parameterType="com.richstonedt.garnet.modules.sys.entity.SysConfigEntity">
		update gar_sys_config
		<set>
			<if test="key != null and key != ''">
				key = #{key},
			</if>
			<if test="value != null and value != ''">
				value = #{value},
			</if>
			<if test="remark != null and remark != ''">
				remark = #{remark}
			</if>
		</set>
			 where id = #{id}
	</update>
	
	<!-- 根据key，更新value -->
	<update id="updateValueByKey" parameterType="map">
		update gar_sys_config
		 <set>
			 <if test="value != null and value != ''">
				 value = #{value}
			 </if>
		 </set>
		 where key = #{key}
	</update>
	
	<!-- 根据key，查询value -->
	<select id="queryByKey" parameterType="string" resultType="string">
		select value from gar_sys_config where key = #{key}
	</select>
	
	<delete id="deleteBatch" parameterType="int">
		delete from gar_sys_config where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	
</mapper>