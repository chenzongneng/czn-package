<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.modules.sys.dao.SysLogDao">

	<select id="queryObject" resultType="com.richstonedt.garnet.modules.sys.entity.SysLogEntity">
		select * from gar_sys_log where id = #{value}
	</select>

	<select id="queryList" resultType="com.richstonedt.garnet.modules.sys.entity.SysLogEntity">
		select * from gar_sys_log 
		<where>
			<if test="key != null and key.trim() != ''">
				username like concat('%',#{key},'%') or operation like concat('%',#{key},'%')
			</if>
		</where>
		order by id desc 
		<if test="offset != null and limit != null">
			limit #{limit} offset #{offset}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from gar_sys_log 
		<where>
			<if test="key != null and key.trim() != ''">
				username like concat('%',#{key},'%') or operation like concat('%',#{key},'%')
			</if>
		</where>
	</select>

	<insert id="save" parameterType="com.richstonedt.garnet.modules.sys.entity.SysLogEntity" useGeneratedKeys="true"
			keyProperty="id">
		insert into gar_sys_log
		<set>
			<if test="username != null and username != ''">
				username = #{username},
			</if>
			<if test="operation != null and operation != ''">
				operation = #{operation},
			</if>
			<if test="method != null and method != ''">
				method = #{method},
			</if>
			<if test="params != null and params != ''">
				params = #{params},
			</if>
			<if test="time != null and time != ''">
				time = #{time},
			</if>
			<if test="ip != null and ip != ''">
				ip = #{ip},
			</if>
			<if test="createDate != null and createDate != ''">
				create_date = #{createDate}
			</if>
		</set>
	</insert>
	
	<delete id="delete">
		delete from gar_sys_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from gar_sys_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>