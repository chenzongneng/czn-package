<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.richstonedt.garnet.modules.sys.dao.SysRoleDao">

	<select id="queryObject" resultType="com.richstonedt.garnet.modules.sys.entity.SysRoleEntity">
		select * from gar_sys_role where role_id = #{value}
	</select>

	<select id="queryList" resultType="com.richstonedt.garnet.modules.sys.entity.SysRoleEntity">
		select r.*, (select d.name from sys_dept d where d.dept_id = r.dept_id) deptName from gar_sys_role r
		<where>
			<if test="roleName != null and roleName.trim() != ''">
				and r.role_name like concat('%',#{roleName},'%')
			</if>
		</where>
		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by r.${sidx} ${order}
			</when>
			<otherwise>
				order by r.role_id asc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit  #{limit} offset #{offset}
		</if>
	</select>
	
	<select id="queryTotal" resultType="int">
		select count(*) from gar_sys_role 
		<where>
			<if test="roleName != null and roleName.trim() != ''">
				role_name like concat('%',#{roleName},'%')
			</if>
		</where>
	</select>

	<insert id="save" parameterType="com.richstonedt.garnet.modules.sys.entity.SysRoleEntity" useGeneratedKeys="true"
			keyProperty="roleId">
		insert into gar_sys_role
		<set>
			<if test="roleId != null and roleId != ''">
				role_id = #{roleId},
			</if>
			<if test="roleName != null and roleName != ''">
				role_name = #{roleName},
			</if>
			<if test="remark != null and remark != ''">
				remark = #{remark},
			</if>
			<if test="deptId != null and deptId != ''">
				dept_id = #{deptId},
			</if>
			<if test="createTime != null and createTime != ''">
				create_time = #{createTime}
			</if>
		</set>
	</insert>

	<update id="update" parameterType="com.richstonedt.garnet.modules.sys.entity.SysRoleEntity">
		update gar_sys_role 
		<set> 
			<if test="roleName != null and roleName != ''">
				role_name = #{roleName},
			</if>
			<if test="remark != null and remark != ''">
				remark = #{remark},
			</if>
			<if test="deptId != null and deptId != ''">
				dept_id = #{deptId}
			</if>
		</set>
		where role_id = #{roleId}
	</update>
	
	<delete id="deleteBatch">
		delete from gar_sys_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from gar_sys_role_menu where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from gar_sys_role_dept where role_id in
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from sys_user_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
	</delete>

</mapper>